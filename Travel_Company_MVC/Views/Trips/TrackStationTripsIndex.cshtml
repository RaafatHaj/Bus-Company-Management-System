@model TrackStationTripsViewModel

@section Styles {

	<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

}



<div class="d-flex gap-6">

	<div class="w-300px">
		<select id="Select_Station" asp-for="StationId" class="form-select  form-select-sm  " data-control="select2" data-placeholder="Select an option" asp-items="@Model.Stations">
			<option></option>
		</select>

	</div>

	<a id="Track_Button" class="btn btn-primary btn-sm js-render-card"
	   data-url="/Trips/TrackStationTrips?StationId=@Model.StationId" 
	   data-station-id="@Model.StationId"
	   data-card-id="Trips_Track_Container"
	   data-has-table="true"
	   data-has-dropdown-list="true"
	   data-table-id="Tracking_Table"
	  >Track</a>




</div>



<div id="Trips_Track_Container" class="mt-15">



</div>

@section Plugins {

	<script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
	<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

}


@section Scripts {


	<script src="~/js/tracking.js"></script>


}
