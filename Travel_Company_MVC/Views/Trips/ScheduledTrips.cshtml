@model IList<ScheduledTripViewModel>;

@section Styles {

	<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

}



<div class="card ">



	<!--begin::Header-->
	<div class="card-header border-0 pt-5 mb-5">
		<h3 class="card-title align-items-start flex-column">
			<span class="card-label fw-bold text-gray-900">Scheduled Trips</span>
			<span class="text-muted mt-1 fw-semibold fs-7">Total @(Model.Count) trips</span>
		</h3>
		<!--begin::Toolbar-->
		<div class="card-toolbar">

			<a href="#" class="btn btn-sm btn-light-success btn-active-light-primary">
				<i class="ki-duotone ki-plus fs-2"></i>New Trip
			</a>


		</div>
		<!--end::Toolbar-->
	</div>
	<!--end::Header-->

	<div class="card-body mb-2 px-9  ">
@*         src="~/assets/images/300-17.jpg" *@



        <div class=" p-5 d-flex ">

            <span class="bullet bullet-vertical h-40px bg-warning me-5"></span>

            <div class="d-flex gap-10">

                <div>

                    <!--begin::Route Name-->
                    <div class="d-flex flex-column">
                        <a href="#"
                           class="text-gray-900 fw-bold text-hover-primary mb-1">D4-A</a>
                        <span class="text-muted fw-semibold fs-7">350 km</span>
                    </div>


                    <!--begin::Route Name-->
                </div>
                <div>

                    <!--begin::Item-->
                    <div class="m-0">


                        <span class="text-muted fw-semibold fs-7 text-uppercase">From</span>
                        <!--begin::Label-->
                        <!--begin::Title-->

                        <a href="#"
                           class="text-gray-900 fw-bold d-block text-hover-primary me-2">Damascus</a>


                    </div>
                    <!--end::Item-->

                </div>

                <div>
                    <div class=" mt-5 me-5">
                        <i class="ki-solid ki-black-right fs-2x text-danger  "></i>
                    </div>

                </div>

                <div>
                    <div class="tab-pane fade show active"
                         id="kt_list_widget_16_tab_1"
                         role="tabpanel">


                        <!--begin::Item-->
                        <div class="m-0">




                            <span class="text-muted fw-semibold fs-7 text-uppercase">To</span>
                            <!--begin::Label-->
                            <!--begin::Title-->
                            <a href="#"
                               class="text-gray-900 fw-bold d-block text-hover-primary">Aleppo</a>


                        </div>
                        <!--end::Item-->
                    </div>
                </div>

                <div>

                    <div class="text-gray-800  mb-2 ms-2">
                        4<span> station</span>
                    </div>

                    <div class="badge badge-light fw-bold">4 hours</div>
                </div>

            </div>



        </div>


        <div class="separator separator-dashed border-gray  my-10"></div>



        <partial name="_ScheduledTrips" model="@Model" />
	</div>
</div>






@section Plugins {

	<script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
	<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
}

@section Scripts {


	<script src="~/js/routesindex.js"></script>

    <script src="~/js/scheduledtrips.js" ></script>


}