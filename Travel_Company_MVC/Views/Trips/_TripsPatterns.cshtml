@using Newtonsoft.Json
@model IList<TripsPatternViewModel>



@if(Model.Count ==0)
{
    <div class="d-flex align-items-center mt-0">

        <h2 class="text-muted fw-semibold fs-7 mt-0 ps-20 ">Route Has No Trips Pattern Yet</h2>

    </div>
    
  
}
else
{


    var patternsTimings = Model.Select(m => m.Time).ToList();
    var patternsTimingsJSon = JsonConvert.SerializeObject(patternsTimings);

    <input id="patterns_timings" type="hidden" value="@patternsTimingsJSon" />

    <div class="border border-dashed  rounded p-7">

        <div class="mb-10">
            <h5>
                Scheduled Trips
            </h5>
            <span class="text-muted ">All scheduled trips pattern in terms of time.</span>

        </div>

        <div class="separator separator-dashed border-muted my-5"></div>



        <div class="table-responsive">

            <table id="Trips_Patterns_Table" class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4 scroll m-10 animate__animated  animate__fadeIn animate__slower">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800 px-7">
                        <th>Pattern</th>
                        <th></th>
                        <th>Duration</th>
                        <th></th>

                        <th></th>
                        <th>Actions</th>


                    </tr>
                </thead>
                <tbody>



                    @foreach (var pattern in Model)
                    {
                        <partial name="_TripPatternRow.cshtml" model="pattern" />

                    }





                </tbody>
            </table>


        </div>
    </div>


 
}
