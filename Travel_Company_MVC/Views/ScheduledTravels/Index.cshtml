
@model IEnumerable<ScheduledTravelVeiwModel>


@section Styles {
	<link href="~/lib/datatables.net-bs5/datatables.bootstrap5.min.css" rel="stylesheet" />
	
}
    
<div class="card mt-3">

    <h1 class="m-3">Write some thing here </h1>
</div>
<div class="card">

    <div class="table-responsive mt-3 mb-3">
        <table class="table table-hover table-row-dashed table-row-gray-300 gy-0 gx-0 align-middle" id="datatable">
            <thead>
                <tr class="fw-bold fs-6 text-gray-800" style="height: 20px; padding:0px">
                    <th class="text-dark  fw-bold" style="padding:20px 20px!important;" scope="col">Date</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Trvel Time</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Route</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Seats</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">First Station</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Last Station</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody >

                @foreach (var travel in Model)
                {
                    @*  <input type="hidden" value="@travel.ScheduledTravelId"/> *@
                    <tr  >

                        <td style="padding:10px 20px!important;">@travel.Date.ToString("dd-MM-yyyy")</td>
                        <td style="padding:10px 5px!important">@travel.TravelTime</td>
                        <td class="text-danger" style="padding:10px 5px!important">@travel.RouteName</td>
                        <td style="padding:10px 5px!important">
                            <h6 class="badge text-bg-@((byte)travel.Status==0 ?"warning":"success")">  @travel.Status</h6>
                        </td>
                        <td class="text-success" style="padding:10px 5px!important">@travel.FirstStation</td>
                        <td style="padding:10px 5px!important"> @travel.LastStation</td>
                        <td style="padding:10px 5px!important">
                            <button class="btn btn-outline-primary btn-sm js-render-modal" data-url="/ScheduledTravels/ScheduledTravelDetials?scheduledTravelId=@travel.ScheduledTravelId"
                                    data-travel-id="@travel.ScheduledTravelId" data-large-modal="true" data-title="Travel Details">
                                Details
                            </button>
                        </td>
                    </tr>
                }


            </tbody>
            </table>

    </div>

    </div>



@section Plugins {


    <script src="~/lib/datatables.net/datatables.min.js"></script>
	<script src="~/lib/datatables.net-bs5/datatables.bootstrap5.min.js"></script>

}