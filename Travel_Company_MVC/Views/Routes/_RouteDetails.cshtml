
@model RouteViewModel

<div class="animate__animated animate__fadeInDown">

    <div class="d-flex gap-10">

        <div class="d-flex">
			<span class="bullet bullet-vertical h-40px bg-primary me-5"></span>

            <!--begin::Route Name-->
            <div class="d-flex flex-column">
                <a href="#"
                   class="text-gray-900 fw-bold text-hover-primary mb-1">@Model.RouteName</a>
                <span class="text-muted fw-semibold fs-7">350 km</span>
            </div>


            <!--begin::Route Name-->
        </div>
        <div>

            <!--begin::Item-->
            <div class="m-0">


                <span class="text-muted fw-semibold fs-7 text-uppercase">From</span>
                <!--begin::Label-->
                <!--begin::Title-->

                <a href="#"
                   class="text-gray-900 fw-bold d-block text-hover-primary me-2">@Model.FirstStation.StationName</a>


            </div>
            <!--end::Item-->

        </div>

        <div>
            <div class=" mt-5 me-5">
                <i class="ki-solid ki-black-right fs-2x text-primary  "></i>
            </div>

        </div>

        <div>
            <div class="tab-pane fade show active"
                 id="kt_list_widget_16_tab_1"
                 role="tabpanel">


                <!--begin::Item-->
                <div class="m-0">




                    <span class="text-muted fw-semibold fs-7 text-uppercase">To</span>
                    <!--begin::Label-->
                    <!--begin::Title-->
                    <a href="#"
                       class="text-gray-900 fw-bold d-block text-hover-primary">@Model.LastStation.StationName</a>


                </div>
                <!--end::Item-->
            </div>
        </div>

        <div>
            <div class="d-flex flex-column">
                <a href="#" class="text-gray-800 text-hover-primary  mb-2 ms-2 js-render-modal"
                   data-route-id="@Model.RouteId" data-url="/Routes/GetRouteStations?routeID=@Model.RouteId">
                    @Model.StationsNumber<span> station</span>
                </a>

                <div class="badge badge-light fw-bold">@TimeSpan.FromMinutes(Model.EstimatedTime).ToString(@"hh\:mm") hours</div>

            </div>
   
        </div>

    </div>


</div>

