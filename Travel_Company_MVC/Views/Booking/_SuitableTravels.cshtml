@model IList<SuitableTravelViewModel>


@if(Model.Count>0)
{
    <div class="table-responsive mt-3 mb-3">
        <table class="table table-hover table-row-dashed table-row-gray-300 gy-0 gx-0 align-middle" id="datatable">
            <thead>
                <tr class="fw-bold fs-6 text-gray-800" >
                    <th class="text-dark  fw-bold"     scope="col">Date</th>
                    <th class="text-dark  fw-bold"   scope="col">Time</th>
       @*              <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Status</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Avaliable Seats</th>
                    <th class="text-dark  fw-bold" style="padding:20px 5px!important" scope="col">Booked Seats</th> *@
                    <th class="text-dark  fw-bold "     scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var travel in Model)
                {
                    var seatsNumbers = travel.AvailableSeats + travel.BookedSeats;

                    var additionalData = new
                    {
                        seatsNumbers,
                        travel.StationAOrder,
                        travel.StationBOrder,
                        travel.RouteStationsNumber,
                        travel.ScheduledTravelID

                    };

                    var jsonData = Json.Serialize(additionalData);

                    <tr data-details='@jsonData' data-url="/Booking/GetAvaliableSeats">

                        <td style="padding:10px 20px!important;">@travel.Date.Date.ToString("dd-MM-yyyy")</td>
                        <td style="padding:10px 5px!important">@travel.Time</td>
                        <td style="padding:10px 5px!important">
                            <button class="btn btn-outline-primary btn-sm js-render-modal  js-table-actions"
                                    data-title="Travel Details">
                                Details
                            </button>
                        </td> 


           @*              <td style="padding:10px 5px!important">
                            <h6 class="badge text-bg-@((byte)travel.Status==0 ?"warning":"success")">  @travel.Status</h6>
                        </td>
                        <td class="text-success" style="padding:10px 5px!important">@travel.AvailableSeats</td>
                        <td class ="text-danger" style="padding:10px 5px!important"> @travel.BookedSeats</td>
                        <td style="padding:10px 5px!important">
                            <button class="btn btn-outline-primary btn-sm js-render-modal" data-url="/ScheduledTravels/ScheduledTravelDetials?scheduledTravelId=@travel.ScheduledTravelId"
                                    data-travel-id="@travel.ScheduledTravelId" data-large-modal="true" data-title="Travel Details">
                                Details
                            </button>
                        </td> *@
                    </tr>
                }


            </tbody>
        </table>

    </div>

}
else
{
    <div class="mt-5 text-center">
        <p>There is no found travels!</p>
    </div>
}

