    <div class=" border-gray-300 border-start mb-8 flex-grow-1 mb-8 me-5">

        <form class="js-ajax-form" method="post"
              data-url="/Vehicles/AssignVehicleToTrip"
              >
    

            <div class="d-flex flex-column  gap-7 ms-7">
             
  

                    <div class="d-flex justify-content-between">

                        <div class="d-flex align-items-center ">
                        
                            <!--begin::Bullet-->
                            <span data-kt-element="bullet" class="bullet bullet-vertical d-flex align-items-center min-h-75px mh-100 me-4 bg-warning"></span>
                            <!--end::Bullet-->
                            <!--begin::Info-->
                            <div class="flex-grow-1 me-5">
                                <!--begin::Time-->
                                <div class="text-gray-800 fw-semibold fs-2 d-flex gap-8">
                                    <div class="d-flex flex-column ">


                                    <div>

                                    

                                        @(Model.MainTripStartDateAndTime?.ToString("HH:mm"))
                                        <span class="text-gray-500 fw-semibold fs-7">
                                            @(Model.MainTripStartDateAndTime?.TimeOfDay > new TimeSpan(12, 0, 0) ? "Pm" : "Am")
                                        </span>
                                    </div>


  

                                    <span class="text-muted fw-semibold fs-7 ">@Model.MainTripStartDateAndTime?.ToString("dd")
                                        <span class="text-primary">@Model.MainTripStartDateAndTime?.ToString("MMM")
                                        </span> @Model.MainTripStartDateAndTime?.ToString("yyyy")
                                    </span>



                             
                                    

                         

                                    </div>
                                    <div class="mt-2">
                                    <i class="ki-duotone ki-black-right fs-1">
                                    </i>
                                    </div>

                                    <div class="d-flex flex-column ">

                                        <div>

                                        @if (Model.AvalibilityEndDateAndTime is not null)
                                        {
                                       
                                            <div>
                                                @(Model.MainTripEndDateAndTime?.ToString("HH:mm")))
                                                <span class="text-gray-500 fw-semibold fs-7">
                                                    @(Model.MainTripEndDateAndTime?.TimeOfDay > new TimeSpan(12, 0, 0) ? "Pm" : "Am")
                                                </span>
                                            </div>

                                            <span class="text-muted fw-semibold fs-7 ">
                                                @Model.MainTripEndDateAndTime?.ToString("dd")
                                                <span class="text-primary">
                                                    @Model.MainTripEndDateAndTime?.ToString("MMM")
                                                </span> @Model.MainTripEndDateAndTime?.ToString("yyyy")
                                            </span>
                                        }
                                        else
                                        {

                                      

                                            <div>
                                              ...
                                            </div>

                                        }

                                        </div>
                  
                                    </div>


                                </div>
                                <!--end::Time-->
                                <!--begin::Description-->
                                <div class="text-gray-600 fw-semibold fs-6">Available time for <span class="text-gray-900 fw-semibold fs-6">Main</span> trip.</div>
                                <!--end::Description-->
                    
                            </div>
                            <!--end::Info-->

                        </div>

                    <div class="d-flex flex-column d-flex flex-column mt-2  ">

                            <label for="" class="form-label me-2" style="white-space: nowrap;">Main Trip :</label>

                            <div class="d-flex gap-4">
                                <input asp-for="MainTripTime" class="form-control form-control-solid form-control-sm flatpickr-main-time" placeholder="Pick time" id="reverse-trip-time" type="text">

                                <input asp-for="MainTripDate" class="form-control form-control-solid form-control-sm flatpickr-main-date" placeholder="Pick date" id="reverse-trip-time" type="text">


                            </div>


                        </div>
                            

                    </div>






                <!--begin::Separator-->
                <div class="separator separator-dashed border-gray-500 my-0"></div>
                   <!--end::Separator-->


    

                <div class="d-flex justify-content-between">


                    <div class="d-flex align-items-center ">
                        <!--begin::Bullet-->
                        <span data-kt-element="bullet" class="bullet bullet-vertical d-flex align-items-center min-h-75px mh-100 me-4 bg-warning"></span>
                        <!--end::Bullet-->
                        <!--begin::Info-->
                        <div class="flex-grow-1 me-5">
                            <!--begin::Time-->
                            <div class="text-gray-800 fw-semibold fs-2 d-flex gap-8">
                                <div class="d-flex flex-column ">



                                    <div class="text-muted fw-semibold fs-7">
                                        From    
                                    </div>

                                    <div class="text-gray-800 fw-semibold fs-6">
                                        Main Trip Start date and Time
                                    </div>

                                    <span class="text-muted fw-semibold fs-7 ">
                                        <span class="text-success">
                                            plus
                                        </span>
                                        <span class="text-danger">
                                            @(TimeSpan.FromMinutes(Model.TripTimeSpanInMinits!.Value).ToString(@"h\:mm")) h
                                        </span>
                                        <span class="text-primary">
                                            +15 min
                                        </span>
                                    </span>

                                </div>


                            </div>
                            <!--end::Time-->
                            <!--begin::Description-->
                            <div class="text-gray-600 fw-semibold fs-6">Available time for <span class="text-gray-900 fw-semibold fs-6">Return</span> trip.</div>
                            <!--end::Description-->
                 
                        </div>
                        <!--end::Info-->

                    </div>

                    

                    <div class="d-flex flex-column mt-1 ">

                            <label for="" class="form-label me-2" style="white-space: nowrap;">Return Trip :</label>

                        <div class="d-flex gap-4">
                            <input asp-for="ReturnTripTime" class="form-control form-control-solid form-control-sm flatpickr-return-timr" placeholder="Pick time" id="reverse-trip-time" type="text">

                            <input asp-for="ReturnTripDate" class="form-control form-control-solid form-control-sm flatpickr-return-date" placeholder="Pick date" id="reverse-trip-time" type="text">


                        </div>
                        </div>



                </div>



    
           

            </div>


            <input asp-for="TripId" type="hidden" />
            <input asp-for="VehicleId" type="hidden" />



            <div class="d-flex justify-content-end py-6 px-9">
                <button type="submit" class="btn btn-primary btn-sm ">Submit</button>
            </div>


        </form>


    </div>




</div>



<button href="#" class=" btn btn-primary btn-sm js-previous-page ">

	Back

</button>





